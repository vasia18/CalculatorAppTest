<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonTape" parent="AppTheme">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="ButtonTape_NumberClick" parent="ButtonTape">
        <item name="android:onClick">onNumberClick</item>
    </style>

    <style name="ButtonTape_OperationClick" parent="ButtonTape">
        <item name="android:onClick">onOperationClick</item>
    </style>

</resources>